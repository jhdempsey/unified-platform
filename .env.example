# =============================================================================
# Unified Platform - Environment Configuration
# =============================================================================

# Vertical Selection
VERTICAL=supply-chain
ENVIRONMENT=dev

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
SCHEMA_REGISTRY_URL=http://schema-registry:8081

# PostgreSQL
DATABASE_URL=postgresql://platform:platform_dev@postgres:5432/platform

# Redis (Cloud Memorystore in GCP)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# MLflow
MLFLOW_TRACKING_URI=http://mlflow:5001
MLFLOW_BACKEND_STORE_URI=postgresql://platform:platform_dev@postgres:5432/platform
MLFLOW_DEFAULT_ARTIFACT_ROOT=/mlflow/artifacts

# AI Services
ANTHROPIC_API_KEY=your-anthropic-key-here
OPENAI_API_KEY=your-openai-key-here
GEMINI_API_KEY=your-gemini-key-here

# Pinecone
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=supply-chain-docs-dev

# GCP
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_LOCATION=us-central1

# Feature Flags
ENABLE_SAMPLE_DATA=true
ENABLE_MONITORING=true

# Confluent Cloud Schema Registry (for cloud deployment)
CONFLUENT_SCHEMA_REGISTRY_URL=https://your-sr-endpoint.confluent.cloud
SCHEMA_REGISTRY_API_KEY=
SCHEMA_REGISTRY_API_SECRET=
